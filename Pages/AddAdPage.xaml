<Page x:Class="Mamontov_02.Pages.AddAdPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mamontov_02.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAdPage">

    <Grid Background="#FFB5D5CA">
        <!-- Используем Grid с 2 колонками -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <!-- Ширина для меток -->
                <ColumnDefinition Width="*"/>
                <!-- Ширина для полей ввода -->
            </Grid.ColumnDefinitions>

            <!-- Название -->
            <TextBlock Text="Название" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10"/>
            <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Width="300" Margin="10" Text="Название"/>

            <!-- Описание -->
            <TextBlock Text="Описание" VerticalAlignment="Center" Grid.Row="1" HorizontalAlignment="Right" Margin="10"/>
            <TextBox x:Name="DescriptionTextBox" Grid.Row="1" Grid.Column="1" Width="300" Margin="10" Text="Описание"/>

            <!-- Стоимость -->
            <TextBlock Text="Стоимость" VerticalAlignment="Center" Grid.Row="2" HorizontalAlignment="Right" Margin="10"/>
            <TextBox x:Name="CostTextBox" Grid.Row="2" Grid.Column="1" Width="300" Margin="10" Text="Стоимость"/>

            <!-- Город -->
            <TextBlock Text="Город" VerticalAlignment="Center" Grid.Row="3" HorizontalAlignment="Right" Margin="10"/>
            <ComboBox x:Name="CityComboBox" Text="{Binding City.Name}" Grid.Row="3" Grid.Column="1" Width="300" Margin="10">
                <!-- Сюда будут добавляться города из базы данных -->
            </ComboBox>

            <!-- Категория -->
            <TextBlock Text="Категория" VerticalAlignment="Center" Grid.Row="4" HorizontalAlignment="Right" Margin="10"/>
            <ComboBox x:Name="CategoryComboBox" Text="{Binding AdsType}" Grid.Row="4" Grid.Column="1" Width="300" Margin="10">
                <!-- Сюда будут добавляться категории -->
            </ComboBox>

            <!-- Тип объявления -->
            <TextBlock Text="Тип объявления" VerticalAlignment="Center" Grid.Row="5" HorizontalAlignment="Right" Margin="10"/>
            <ComboBox x:Name="AdsTypeComboBox" Grid.Row="5" Grid.Column="1" Width="300" Margin="10">
                <!-- Сюда будут добавляться типы объявлений -->
            </ComboBox>

            <!-- Фото -->
            <TextBlock Text="Фото" VerticalAlignment="Center" Grid.Row="6" HorizontalAlignment="Right" Margin="10"/>
            <TextBox x:Name="PhotoTextBox" Grid.Row="6" Grid.Column="1" Width="300" Margin="10" Text="NULL"/>

            <!-- Статус (только при редактировании) -->
            <TextBlock Name="StatusTextBlock" Text="Статус" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10" Grid.Row="7" Visibility="Collapsed"/>
            <ComboBox x:Name="StatusComboBox" Grid.Row="7" Grid.Column="1" Width="300" Margin="10" Visibility="Collapsed">
                <ComboBoxItem Content="Открыто"/>
                <ComboBoxItem Content="Завершено"/>
            </ComboBox>

            <!-- Кнопка сохранения -->
            <Button x:Name="SaveButton" Content="Сохранить" Width="150" Grid.Row="8" Grid.Column="1" Margin="10" Click="SaveButton_Click"/>
        </Grid>
    </Grid>
</Page>

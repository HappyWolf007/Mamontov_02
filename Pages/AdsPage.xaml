<Page x:Class="Mamontov_02.Pages.AdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mamontov_02.Pages" xmlns:local1="SellerVisibilityConverter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdsPage" Loaded="Page_Loaded">

    <Grid Background="#FFB5D5CA">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Панель фильтрации и поиска -->
        <!-- Панель фильтрации и поиска -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="SearchBox" Width="174" Margin="10" TextChanged="SearchBox_TextChanged" />
            <ComboBox x:Name="CategoryComboBox"  Width="153" Margin="10" IsEnabled="True" Height="21" SelectionChanged="CategoryComboBox_SelectionChanged" />
            <ComboBox x:Name="CityComboBox"  Width="148" Margin="10" IsEnabled="True" Height="21"  SelectionChanged="CityComboBox_SelectionChanged"/>
            <Button x:Name="RefreshButton" Content="Обновить" Width="100" Margin="10" Click="RefreshButton_Click"/>
            <Button x:Name="ClearButton" Content="Очистить фильтры" Width="120" Margin="10" Click="ClearButton_Click"/>
            
        </StackPanel>

        <!-- Список объявлений -->
        <ListView Name="AdsListView" Grid.Row="1" Margin="10" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="250" Height="350" Margin="10" Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="250" Grid.Row="0" TextWrapping="Wrap" Text="{Binding Name}" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>

                        <Image Width="250" Height="200" Grid.Row="1" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="Photo">
                                    <Binding.TargetNullValue>
                                        <ImageSource>/Resources/DefaultPhoto.png</ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="250" Grid.Row="2" HorizontalAlignment="Center" FontSize="14" Text="{Binding Category.Name}"/>

                        <TextBlock VerticalAlignment="Top" TextWrapping="Wrap" Width="250" Grid.Row="3" HorizontalAlignment="Center" FontSize="12" Text="{Binding Description}" Margin="5"/>

                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="250" Grid.Row="4" HorizontalAlignment="Center" FontSize="12" Text="{Binding Seller}" Margin="5"/>

                        <!-- Кнопка редактирования -->
                        <Button Name="EditAdButton" Content="Редактировать" Width="100" Height="30" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5" 
                        Click="EditAdButton_Click" Loaded="EditAdButton_Loaded"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Панель для добавления нового объявления -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="AddAdButton" Content="Добавить объявление" Width="150" Margin="10" Click="AddAdButton_Click"/>
            <Button x:Name="ViewCompletedButton" Content="Завершенные объявления" Width="180" Margin="10" Click="ViewCompletedButton_Click"/>
        </StackPanel>
        </Grid>
</Page>

<Page x:Class="Mamontov_02.Pages.AdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mamontov_02.Pages" xmlns:local1="SellerVisibilityConverter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="815"
      Title="AdsPage" Loaded="Page_Loaded">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="381*"/>
            <ColumnDefinition Width="419*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="54"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Height="70" Width="800" Grid.ColumnSpan="2">
            <TextBox x:Name="SearchBox" Width="155" Margin="10" TextChanged="SearchBox_TextChanged" Height="30" FontSize="12"/>
            <ComboBox x:Name="CategoryComboBox"  Width="153" Margin="16" IsEnabled="True" Height="30" FontSize="12" SelectionChanged="CategoryComboBox_SelectionChanged" Padding="0"/>
            <ComboBox x:Name="CityComboBox"  Width="148" Margin="16" IsEnabled="True" Height="30" FontSize="12" SelectionChanged="CityComboBox_SelectionChanged" Padding="0"/>
            <Button x:Name="RefreshButton" Content="Обновить" Width="82" Margin="16" Click="RefreshButton_Click" />
            <Button x:Name="ClearButton" Content="Очистить фильтр" Width="129" Margin="16" Click="ClearButton_Click"/>

        </StackPanel>

        <ListView Name="AdsListView" Grid.Row="1" Margin="16,8,16,0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center" Grid.ColumnSpan="2">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="260" Height="400" Margin="5" Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="250" Grid.Row="0" TextWrapping="Wrap" Text="{Binding Name}" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>


                        <Image Width="250" Height="200" Grid.Row="1" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="Photo">
                                    <Binding.TargetNullValue>
                                        <ImageSource>/Resources/DefaultPhoto.png</ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="250" Grid.Row="2" HorizontalAlignment="Center" FontSize="14" Text="{Binding Category.Name}"/>

                        <TextBlock VerticalAlignment="Top" TextWrapping="Wrap" Width="250" Grid.Row="3" HorizontalAlignment="Center" FontSize="12" Text="{Binding Description}" Margin="5"/>

                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="250" Grid.Row="4" HorizontalAlignment="Center" FontSize="12" Text="{Binding Seller}" Margin="5"/>

                        <!-- Кнопка редактирования -->
                        <Button Name="EditAdButton" Content="Редактировать" Width="100" Height="30" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5" 
                        Click="EditAdButton_Click" Loaded="EditAdButton_Loaded"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Панель для добавления нового объявления -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Height="60" Width="384" Grid.ColumnSpan="2" Margin="208,0,0,0">
            <Button x:Name="AddAdButton" Content="Добавить объявление" Width="161"  Click="AddAdButton_Click"/>
            <Button x:Name="ViewCompletedButton" Content="Завершенные объявления" Width="191" Margin="16,0" Click="ViewCompletedButton_Click"/>
        </StackPanel>
    </Grid>
</Page>

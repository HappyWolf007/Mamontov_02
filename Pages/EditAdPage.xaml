<Page x:Class="Mamontov_02.Pages.EditAdPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mamontov_02.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditAdPage">

    <Grid Background="#FFB5D5CA">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="58"/>
        </Grid.RowDefinitions>

        <!-- Форма для редактирования объявления -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Height="283" Width="320">
            <TextBox x:Name="NameTextBox" Width="300" Margin="0,16"/>
            <TextBox x:Name="DescriptionTextBox" Width="300" Margin="0,16"/>
            <TextBox x:Name="CostTextBox" Width="300" Margin="0,16" />
            <ComboBox x:Name="CategoryComboBox" Width="300" Margin="0,16">
                <ComboBoxItem Content="Электроника"/>
                <ComboBoxItem Content="Недвижимость"/>
                <ComboBoxItem Content="Услуги"/>
            </ComboBox>
            <Button x:Name="SaveButton" Content="Сохранить" Width="124" Margin="10" Click="SaveButton_Click"/>
        </StackPanel>

        <!-- Кнопка отмены -->
        <Button x:Name="CancelButton" Content="Отмена"  Width="100" Margin="10,0,0,0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Click="CancelButton_Click" Height="38"/>
    </Grid>
</Page>
<Page x:Class="Mamontov_02.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mamontov_02.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">
    <Grid Background="#FFB5D5CA">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="61"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="263*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Foreground="Gray" Text="Пароль" Grid.Column="2" FontSize="18" x:Name="txtHintPassword" HorizontalAlignment="Left" Margin="14,60,0,0" Grid.Row="1" VerticalAlignment="Top" Height="28" Width="246"/>
        <TextBlock Foreground="Gray" Text="Подтвердите пароль" Grid.Column="2" FontSize="18" x:Name="txtHintConfirmPassword" HorizontalAlignment="Left" Margin="14,104,0,0" Grid.Row="1" VerticalAlignment="Top" Height="28" Width="246"/>
        <TextBlock Foreground="Gray" Text="Логин" Grid.Column="2" FontSize="18" x:Name="txtHintLogin" HorizontalAlignment="Left" Margin="14,12,0,0" Grid.Row="1" VerticalAlignment="Top" Height="28" Width="246"/>

        <Label Grid.Column="1" Content="Логин" Grid.Row="1" Height="50" VerticalAlignment="Top"/>
        <TextBox Background="Transparent" ToolTip="Введите логин" x:Name="TextBoxLogin" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" Width="246" Height="30" VerticalAlignment="Top" Margin="14,10,0,0"/>

        <Label Content="Пароль" Grid.Row="1" Grid.Column="1" Height="42" VerticalAlignment="Top" Margin="0,54,0,0"/>
        <PasswordBox Background="Transparent" VerticalContentAlignment="Center" FontSize="14" ToolTip="Введите пароль" x:Name="PasswordBox" Grid.Row="1" HorizontalAlignment="Left" Width="246" Grid.Column="2" Height="28" VerticalAlignment="Top" Margin="14,60,0,0"/>

        <Label Content="Подтвердите пароль" Grid.Row="1" Grid.Column="1" Height="42" VerticalAlignment="Top" Margin="0,98,0,0"/>
        <PasswordBox Background="Transparent" VerticalContentAlignment="Center" FontSize="14" ToolTip="Введите подтверждение пароля" x:Name="ConfirmPasswordBox" Grid.Row="1" HorizontalAlignment="Left" Width="246" Grid.Column="2" Height="28" VerticalAlignment="Top" Margin="14,104,0,0"/>

        <Button x:Name="ButtonRegister" ToolTip="Зарегистрировать нового пользователя" Grid.Column="2" Content="Регистрация" HorizontalAlignment="Left" Margin="14,146,0,0" Grid.Row="1" Width="137" Height="36" VerticalAlignment="Top" Click="ButtonRegister_Click"/>

        <Button x:Name="ButtonBack" ToolTip="Назад на страницу авторизации" Grid.Column="2" Content="Назад" HorizontalAlignment="Left" Margin="14,188,0,0" Grid.Row="1" Width="137" Height="36" VerticalAlignment="Top" Click="ButtonBack_Click"/>
    </Grid>

</Page>
